<%= render 'items/update_option' %>

$('#options_div').append("<%= escape_javascript(render @option) %> ")

var updateOptionWidths = function(selector, limit) {
  var numOfOptions = $(selector).length
  if (numOfOptions < limit) {
    var computedWidth = Math.floor(100 / numOfOptions - 5)
  } else {
    var computedWidth = Math.floor( 100 / limit - 5)
  }

  $(selector).css('width', computedWidth + '%')
}

updateOptionWidths('.option', 3)
$('#<%= dom_id(@option) %>').fadeIn()

